/* page/cart1/cart1.wxss */
page{
  width: 100%;
  height: 100%;
}
.container{
  width: 100%;
  height: 100%;
}
.nav {
  height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: #fff;
  font-size: 13px;
  white-space: nowrap;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  text-align: center;
  color: #AAA9AA;
  border-bottom:1px solid #D6D7D6;
}
.nav-item {
  width: 20%;
  display: inline-block;
  text-align: center;
}
.nav-item.active{
  color: #000;
}
.tab-box{
  background: #F7F3F7;
  padding-top: 80rpx;
  height: 100vh;
  box-sizing: border-box;
}
.tab-content{
  overflow-y: scroll;
  text-align: center;
}

.iimg{
width: 90%;
height: 150px;
border-radius: 7px 7px 0 0;
vertical-align: bottom;
}

.shop{
text-align: center;
margin-top: 10px;
}

.photoer{
font-size: 13px;
width: 90%;
margin: 0 auto;
background-color: #fff;
padding: 5px 15px 10px;
box-sizing: border-box;
margin-bottom: 10px;
}

swiper-item{
overflow: scroll !important;
}